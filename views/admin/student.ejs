<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm p-2 mb-3 bg-body rounded">
                <img class="card-img-top"
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSBl1Blk-Lch1VjDGsKOozVBEyHborb1_VcKtEJ6h_Fzpi49NHt_yLXvfTTP54OVhKYjCc&usqp=CAU"
                    alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= student.name %>
                    </h5>
                    <p class="card-text">
                        <%= student.rollno %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        Semester : <%= student.currentSemester %> |
                            Program : <%= student.program %>


                    </li>
                    <li class="list-group-item text-muted">
                        Gsuite Id: <%=student.email%>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="" class="card-link btn btn-info">Edit</a>
                    <!-- Button trigger modal to delete -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#askDeleteStudent">
                        Delete
                    </button>

                </div>
                <!-- Modal to ask if sure to delete -->
                <div class="modal fade" id="askDeleteStudent" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete <%=student.name%> data?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this data completely from database?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form class="d-inline"
                                    action="/mentorship/admin/students/<%=student._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">DELETE</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-warning" href="/mentorship/admin/students">Back to Students</a>

            </div>
        </div>
    </div>
