<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">

            <% if(filter.program=='All' ){ %>
                <h2>Registered Students</h2>
                <%}else { %>
                    <h2>Registered <%=program%> Students</h2>
                    <% } %>

        </div>

        <div class="col-6">
            <form action="/mentorship/admin/students" method="POST" class="validated-form" novalidate>
                <div class="d-flex">
                    <input type="number" class="form-control mb-3 mx-2" name="filter[semester]" placeholder="semester">
                    <select class="form-select mb-3" name="filter[program]" aria-label="select">
                        <option value="All" selected>All</option>
                        <option value="B.Tech">BTech</option>
                        <option value="M.Tech">M.Tech</option>
                        <option value="MCA">MCA</option>
                    </select>
                    <div class="valid-feedback">Looks Good!</div>
                    <button type="submit" class="btn btn-success  mx-2 mb-3">Filter</button>

                </div>
            </form>
        </div>


    </div>
    <hr>
    <div class="row ">

        <% for (let student of studentFilter) {%>
            <div class="col-md-4 my-1">
                <div class="card shadow-sm p-2 mb-3 bg-body rounded">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=student.name%>
                        </h5>
                        <details class="card-text lead">
                            <b> Program: </b>
                            <%=student.program%> <br>
                                <b>Roll Number:</b>
                                <%=student.rollno%>
                                    <br>
                                    <b>Semester:</b>
                                    <%=student.currentSemester%>

                        </details>
                    </div>
                    <div class="card-body d-flex">
                        <a href="/mentorship/admin/students/<%=student._id%>"
                            class="card-link btn btn-primary">Details</a>
                    </div>
                </div>

            </div>
            <% } %>
    </div>
