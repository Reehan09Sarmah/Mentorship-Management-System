<body class="d-flex flex-column vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2 col-md-2 d-flex flex-column justify-content-between col-auto bg-dark min-vh-100">
                <div class="mt-4 sidenav">
                    <a href="" class=" text-white d-none d-md-inline text-decoration-none d-flex align-items-center">
                        <span id="dashName" class="">Mentor Dashboard</span>
                    </a>
                    <hr class="text-white" />
